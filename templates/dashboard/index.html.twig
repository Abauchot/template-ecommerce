<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="{{ path('app_dashboard') }}">Dashboard</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_dashboard_user') }}">Utilisateurs</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_dashboard_product') }}">Produits</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_dashboard_category') }}">Catégories</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Commandes</a>
            </li>
            <li class="nav-item">
