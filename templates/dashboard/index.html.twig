                </div>
                <div class="card-body">
                    <a href="{{ path('app_dashboard_user') }}" class="btn btn-primary">Gérer les utilisateurs</a>
                    <a href="#" class="btn btn-primary">Modifier un utilisateur</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Produits
                </div>
                <div class="card-body">
                    <a href="{{ path('app_dashboard_product') }}" class="btn btn-primary">Gérer les produits</a>
                    <a href="{{ path('app_dashboard_create_product') }}" class="btn btn-primary">Créer un produit</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Catégories
                </div>
                <div class="card-body">
                    <a href="{{ path('app_dashboard_category') }}" class="btn btn-primary">Gérer les catégories</a>
                    <a href="{{ path('app_dashboard_create_category') }}" class="btn btn-primary">Créer une catégorie</a>
